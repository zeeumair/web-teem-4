<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Products" asp-action="Index">Webshop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Shopping Cart</a>
                        </li>

                        <li class="nav-item">

                            @if (User.Identity.IsAuthenticated)
                            {

                                <a asp-controller="UserWithAuthentication" asp-action="Logout">Logout</a>
                                <a asp-controller="UserWithAuthentication" asp-action="Edit">Min Sida</a>


                            }
                            else
                            {
                                <a asp-controller="UserWithAuthentication" asp-action="Login">Login</a>
                                <a asp-controller="UserWithAuthentication" asp-action="Register">Register</a>

                            }


                        </li>

                        @{ if (ViewBag.HideCurrencyConversion == null)
                           {
                                <li class="scrollableCollapse">
                                    <a class="btn btn-secondary" role="button" data-toggle="collapse" href="#currencyListContainer">
                                        @{
                                            if (String.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("currencyCode")))
                                            {
                                                <h6 id="currentCurrency">Currency: SEK</h6>
                                            }
                                            else
                                            {
                                                <h6 id="currentCurrency">Currency: @HttpContextAccessor.HttpContext.Session.GetString("currencyCode")</h6>
                                            }
                                        }
                                    </a>
                                    <div id="currencyListContainer" class="collapse">
                                        <ul id="currencyList" class="list-group">
                                        </ul>
                                    </div>
                                </li>
                           }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Webshop
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
