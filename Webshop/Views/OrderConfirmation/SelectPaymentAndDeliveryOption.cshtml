
@Html.ActionLink("Back", "Index", "ShoppingCart", null, null)




    <form method="post" action="@Url.Action("Confirmation", "OrderConfirmation")">
        <h2> Payment</h2>
        <label>Swish</label>
        <input type="checkbox" id="swish" name="paymentType" onclick="TogglePayment()" value="swish">
        <label>Invoice</label>
        <input type="checkbox" id="invoice" name="paymentType" onclick="TogglePayment()" value="invoice">

        <h2>Delivery</h2>
        <label>2-5 days</label>
        <input type="checkbox" id="twoToFiveDay" name="deliveryTime" value="twoToFiveDay" onclick="ToggleDelivery()">
        <label>5-10 days</label>
        <input type="checkbox" id="fiveToTenDays" name="deliveryTime" value="fiveToTenDays" onclick="ToggleDelivery2()">
        <label>30 days</label>
        <input type="checkbox" id="thirtyDays" name="deliveryTime" value="thirtyDays" onclick="ToggleDelivery3()">
        <br />
        <label>Total Price</label>
        <input type="text" name="totalPrice" value="@ViewBag.totalPrice" readonly />
        <input type="text" name="productId" value="@ViewBag.productId" hidden />
        <input type="text" name="orderId" value="@ViewBag.orderId" hidden />
        <input type="text" name="orderItemId" value="@ViewBag.orderItemId" hidden />
        <input type="text" name="quantity" value="@ViewBag.quantity" hidden />



        <input type="submit" id="submit" value="Order" /> <!--Commented out <disabled> value for testing purposes-->
    </form>

